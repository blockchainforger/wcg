<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="WCG" location="startMenu"/>
	<shortcut
		name="Wcg Server"
		target="$INSTALL_PATH\wcg.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start WCG server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
	<shortcut
		name="Wcg Wallet"
		target="http://localhost:2082/index.html"
